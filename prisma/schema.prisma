generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EducationalItem {
  id        String @id @default(uuid())
  title     String
  url       String
  thumbnail String?
  channel   String?
  topic     String
}

model LikedItem {
  id        String   @id @default(uuid())
  title     String
  url       String?
  thumbnail String?
  channel   String?
  category  String
  createdAt DateTime @default(now())
}

model Movie {
  id          String @id @default(uuid())
  title       String
  year        Int
  poster      String
  description String
}

model FunFact {
  id          String @id @default(uuid())
  title       String
  url         String
  description String
  category    String
}

model Music {
  id       Int    @id @default(autoincrement())
  title    String
  artist   String
  duration String
  videoId  String
}
